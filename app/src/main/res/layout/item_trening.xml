<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#E3F2FD"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/textRodzaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rodzaj: Spacer"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/textDystans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dystans: 3 km"
        android:textSize="14sp"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/textCzas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Czas: 30 minut"
        android:textSize="14sp"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/textKalorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kalorie: 200"
        android:textSize="14sp"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/textIntensywnosc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intensywność: Średnia"
        android:textSize="14sp" />
</LinearLayout>
