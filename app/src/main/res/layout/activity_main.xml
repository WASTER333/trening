<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radioSpacer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spacer"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioBieg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bieg" />

        <RadioButton
            android:id="@+id/radioTreningSilowy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trening siłowy" />
    </RadioGroup>

    <EditText
        android:id="@+id/editDystans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dystans (w km)"
        android:inputType="numberDecimal"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editCzas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Czas trwania (w minutach)"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editKalorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Spalone kalorie"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intensywność"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonDodaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dodaj trening"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp" />
</LinearLayout>
